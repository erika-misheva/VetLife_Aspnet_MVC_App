@using VetLife.Data.ViewModels
@model LoginVM


@{
    ViewData["Title"] = "Sign in into your account";
}
<div class="row">
    <div class="col-md-6 offset-3">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger mt-2">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="modal-content rounded-4 shadow account-custom">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Login</h1>
            </div>
            <div class="modal-body p-5 pt-0">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">

                        <input asp-for="EmailAddress" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                        <label asp-for="EmailAddress" class="control-label" for="floatingInput">Email address</label>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">

                        <input asp-for="Password" class="form-control rounded-3 type="password" id="floatingInput" placeholder="Password" />
                        <label asp-for="Password" class="control-label" for="floatingInput">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center bg-dark" style="--bs-bg-opacity: .9;">
                        <button type="submit" class="btn btn-primary custom-button mb-2 btn rounded-3 m-2">
                            Log in <i class="bi bi-box-arrow-in-right"></i>
                        </button>
                        <a class="py-2 mb-2 btn btn-outline-warning rounded-3 m-2" asp-controller="Pets" asp-action="Index">Cancel</a>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>