<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetLife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VetLife.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="d-flex">
        <div class="d-flex flex-column flex-shrink-0 bg-body-tertiary p-3" style="width: 4.5rem; height: 100vh;">
            <a asp-controller="Pets" asp-action="Index"
               class="d-flex align-items-center justify-content-center p-3 link-body-emphasis text-decoration-none w-100">
                <img src="~/images/fd346bc910f0428ba71488e39663a4a8-free.png"
                     alt="PurrfectCare Logo"
                     style="width:50px; height: 50px;">
            </a>

            <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
                <li class="nav-item">
                    <a asp-controller="Pets" asp-action="Index" class="nav-link py-3 border-bottom rounded-0 @((ViewData["ActivePage"] as string == "Pets") ? "active" : "")" data-bs-toggle="tooltip" title="Go to Pets Home">
                        <i class="bi bi-house-door"></i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Pets" asp-action="Index" class="nav-link py-3 border-bottom rounded-0 @((ViewData["ActivePage"] as string == "Pets") ? "active" : "")" data-bs-toggle="tooltip" title="View Pets" data-bs-placement="right">
                        <i class="bi bi-gitlab"></i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Owners" asp-action="Index" class="nav-link py-3 border-bottom rounded-0 @((ViewData["ActivePage"] as string == "Owners") ? "active" : "")" data-bs-toggle="tooltip" title="Go to Owners">
                        <i class="bi bi-person-heart"></i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Vaccines" asp-action="Index" class="nav-link py-3 border-bottom rounded-0 @((ViewData["ActivePage"] as string == "Vaccines") ? "active" : "")" data-bs-toggle="tooltip" title="View Vaccines">
                        <i class="bi bi-prescription2"></i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Drugs" asp-action="Index" class="nav-link py-3 border-bottom rounded-0 @((ViewData["ActivePage"] as string == "Drugs") ? "active" : "")" data-bs-toggle="tooltip" title="Go to Drugs">
                        <i class="bi bi-capsule"></i>
                    </a>
                </li>
            </ul>
        </div>

        <div class="container-fluid p-4">

           <partial name="_Identity.cshtml"/>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
