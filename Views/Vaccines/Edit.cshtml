@model Vaccine

@{
    ViewData["Title"] = "Edit Vaccine";
}

<div class="row vh-90 shadow">
    <div class="col-md-8 offset-2 mt-4">
        <h3 class="mb-3">Edit Vaccine</h3>
        <form asp-action="Edit" method="post">
            <div class="row">
                <div class="col">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="Manufacturer" type="text" class="form-control" placeholder="Manufacturer" aria-label="Manufacturer" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3">
                <div class="col">
                    <label asp-for="DateProduced" class="control-label"></label>
                    <input asp-for="DateProduced" type="date" class="form-control" />
                    <span asp-validation-for="DateProduced" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="ExpiryDate" class="control-label"></label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="mb-4 d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-action="Index" class="btn btn btn-warning">Cancel</a>
            </div>

        </form>
    </div>
</div>


